# RAG Chatbot Configuration

# Google API Key (REQUIRED)
GOOGLE_API_KEY="your_google_api_key_here"             # Required: For Gemini LLM

# Jina API Key (REQUIRED)
JINA_API_KEY="your_jina_api_key_here"                 # Required: For embeddings v4

# Task Master AI Keys (Optional - for development workflow)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Optional: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...

# Multimodal Configuration (Image Processing)
ENABLE_IMAGE_INGEST=true                               # Enable image extraction from PDFs
STORAGE_BASE_PATH=/var/data/rag/images                 # Base path for image storage
THUMBNAIL_SUBDIR=thumbnails                            # Subdirectory for thumbnails
IMAGE_MAX_SIDE_PX=1024                                 # Maximum pixel size for image side
IMAGE_MAX_BYTES=5242880                                # Maximum image size in bytes (5MB)
QDRANT_COLLECTION=rag_multimodal                       # Collection name for multimodal index
TOP_K_SEARCH=50                                        # Top K results from search
TOP_N_RERANK=10                                        # Top N results after reranking
JINA_EMBEDDINGS_MODEL=jina-embeddings-v4               # Jina embeddings model for multimodal
JINA_RERANK_MODEL=jina-rerank-m0                       # Jina rerank model for multimodal
REQUEST_TIMEOUT_MS=15000                               # Request timeout in milliseconds

# Memory Management & Conversation History
MAX_HISTORY_CHARS=8000                                  # Maximum characters in conversation history before summarization
SLIDING_WINDOW_TURNS=6                                  # Number of recent conversation turns to preserve after summarization
MAX_QUERY_LENGTH=2000                                   # Maximum characters per user query
MIN_QUERY_LENGTH=1                                      # Minimum characters per user query

# Additional Optional Keys
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...